<h1>Transmission Events</h1>

<table>
  <thead>
    <tr>
      <th>Source</th>
      <th>Target</th>
      <th>Location</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transmissions.each do |transmission| %>
      <tr>
        <td><%= transmission.patient.name %></td>
        <td><%= transmission.infected.name %></td>
        <td><%= transmission.location %></td>
        <td><%= transmission.date %></td>
        <td><%= link_to 'Show', transmission %></td>
        <td><%= link_to 'Edit', edit_transmission_path(transmission) %></td>
        <td><%= link_to 'Destroy', transmission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

